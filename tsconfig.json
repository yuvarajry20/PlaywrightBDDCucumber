{
  "compilerOptions": {
    "target": "ESnext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
